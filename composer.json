{
    "name": "piggly-dev/piggly-views-wordpress",
    "description": "Piggly Views Wordpress Plugin",
    "keywords": [
      "wordpress-plugin",
      "wordpress",
      "views",
      "tracking views"
    ],
    "license": "GNU",
    "type": "wordpress-plugin",
    "require": {
      "php": "^7.0.0"
    },
    "require-dev": {
      "phpunit/phpunit": "6.0",
      "squizlabs/php_codesniffer": "3.*",
      "wp-coding-standards/wpcs": "1.2.0"
    },
    "scripts": {
      "test": "phpunit",
      "lint": "phpcs",
      "clean": "phpcbf",
      "wp-package": "zip -r piggly-views.zip admin assets includes languages public LICENSE piggly-views.php README.txt"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}